{
    "name": "nora",
    "version": "1.0.0",
    "main": "main.js",
    "types": "main.ts",
    "license": "MPL-2.0",
    "private": true,
    "scripts": {
        "get": "cdktf get",
        "build": "tsc",
        "synth": "cdktf synth",
        "compile": "tsc --pretty",
        "watch": "tsc -w",
        "test": "jest",
        "test:watch": "jest --watch",
