        "ts-md5": "^1.3.1"
    },
    "devDependencies": {
        "@types/jest": "^29.5.5",
        "@types/node": "^20.8.6",
        "@typescript-eslint/eslint-plugin": "^6.8.0",
        "@typescript-eslint/parser": "^6.8.0",
        "eslint": "^8.51.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2"
